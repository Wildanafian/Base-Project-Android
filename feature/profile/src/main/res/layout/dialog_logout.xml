<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/space_small"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_xlarge"
            android:orientation="vertical">

            <TextView
                style="@style/text_large_medium_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textAlignment="center"
                android:text="@string/logout" />

            <TextView
                style="@style/text_normal_regular_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_normal"
                android:ellipsize="end"
                android:textAlignment="center"
                android:text="@string/app_name" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_large"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_out"
                    style="@style/button_medium_medium_red"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_xlarge"
                    android:layout_marginStart="3dp"
                    android:layout_marginBottom="@dimen/space_xxxsmall"
                    android:layout_marginEnd="@dimen/space_xxxlarge"
                    android:layout_weight="1"
                    android:background="@drawable/bg_white_border_red_r30"
                    android:text="@string/keluar" />

                <Button
                    android:id="@+id/btn_close"
                    style="@style/button_medium_medium_white"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_xlarge"
                    android:layout_marginBottom="@dimen/space_xxxsmall"
                    android:layout_marginEnd="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_red_r30"
                    android:text="@string/tidak" />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>