<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/this_is_image"
            android:scaleType="fitStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv"
            style="@style/text_toolbar_medium"
            android:layout_marginTop="@dimen/space_xxlarge"
            android:text="@string/profil"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btn_edit"
            android:layout_width="@dimen/size_normal"
            android:layout_height="@dimen/size_normal"
            android:layout_marginTop="@dimen/space_xxlarge"
            android:layout_marginEnd="@dimen/space_normal"
            android:contentDescription="@string/this_is_image"
            android:padding="2dp"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_xxxsmall"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingStart="@dimen/space_normal"
        android:paddingEnd="@dimen/space_normal"
        android:paddingTop="@dimen/space_large"
        android:paddingBottom="@dimen/space_large">

        <ImageView
            android:layout_width="@dimen/size_normal"
            android:layout_height="@dimen/size_normal"
            android:contentDescription="@string/this_is_image"
            android:scaleType="fitCenter"
            android:src="@drawable/img_logout" />

        <TextView
            style="@style/text_large_semibold_black"
            android:layout_marginStart="@dimen/space_normal"
            android:text="@string/logout" />
    </LinearLayout>

</LinearLayout>